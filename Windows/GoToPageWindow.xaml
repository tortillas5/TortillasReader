<Window x:Class="TortillasReader.GoToPageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TortillasReader"
        mc:Ignorable="d"
        Title="Aller à la page" Height="100" Width="155">
    <Grid>
        <ComboBox x:Name="PageNumber" HorizontalAlignment="Left" Margin="10,10,10,10" VerticalAlignment="Top" Width="115" Height="20"/>
        <Button Click="Ok" Content="Ok" HorizontalAlignment="Center" Margin="0,35,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.586,-0.618" Width="30"/>
    </Grid>
</Window>
