<Window x:Class="TortillasReader.Windows.PreviewThumbnailsWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:TortillasReader.Windows"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PreviewThumbnailsWindow"
      Loaded="Window_Loaded"
      MouseWheel="Window_MouseWheel"
      SizeChanged="Window_SizeChanged"
      MinHeight="500">
    <Grid>
        <Label x:Name="PageNumber" Content="Pages" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,12,0,0" Panel.ZIndex="200" />
        <Canvas x:Name="ImagesCanvas" Margin="0,0,0,0" />
    </Grid>
</Window>