<Window DataContext="{Binding RelativeSource={RelativeSource Self}}"
        x:Class="TortillasReader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TortillasReader"
        mc:Ignorable="d"
        Title="Tortillas reader" Height="450" Width="800"
        x:Name="MainWindowElement">
    <Grid>
        <ComboBox IsTabStop="False" x:Name="GoToPageNumber" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="115" Height="20" SelectionChanged="GoToPageNumber_SelectionChanged"/>
        <ComboBox IsTabStop="False" x:Name="ScrollSpeed" HorizontalAlignment="Left" Margin="130,10,0,0" VerticalAlignment="Top" Width="120" Height="20" SelectionChanged="ScrollSpeed_SelectionChanged"/>
        <Button x:Name="LoadFile" Content="Charger un fichier" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0" Click="LoadFile_Click"/>
        <Label x:Name="PageNumber" Content="Pages" HorizontalAlignment="Right" VerticalAlignment="Top"/>
        <Border x:Name="BorderLeft" Panel.ZIndex="{Binding BorderLeftZIndex}">
            <Image Stretch="Uniform" x:Name="LeftPage" Margin="0,35,400,0" MouseDown="HandleMouseDown" MouseUp="HandleMouseUp" MouseMove="MouseMoveHandler"/>
        </Border>
        <Border x:Name="BorderRight" Panel.ZIndex="{Binding BorderRightZIndex}">
            <Image Stretch="Uniform" x:Name="RightPage" Margin="400,35,0,0" MouseDown="HandleMouseDown" MouseUp="HandleMouseUp"  MouseMove="MouseMoveHandler"/>
        </Border>
    </Grid>
</Window>
